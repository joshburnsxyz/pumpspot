default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  host: localhost
  port: 5432
  username: postgres
  password: postgres
  
development:
  <<: *default
  database: pumpspot_development

test:
  <<: *default
  database: pumpspot_test

production:
  <<: *default
  password: <%= ENV["PUMPSPOT_DATABASE_PASSWORD"] %>
  database: pumpspot_prod
